<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About"
    android:background="@color/bg_submenu"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:id="@+id/profile">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/colorPrimary"
            android:orientation="vertical">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="120dp"
                android:layout_height="125dp"
                android:src="@drawable/logodepan2"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="go Bukittinggi"
                android:textColor="@color/putih"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textSize="21sp"/>


        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="320dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="190dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="4">
                
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:text="Nama"
                        android:textColor="@color/hitam"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:paddingLeft="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:text=": Alvin Ramadhani"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:text="E-mail"
                        android:textColor="@color/hitam"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:paddingLeft="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:text=": alvin080297@gmail.com"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:text="Jurusan"
                        android:textColor="@color/hitam"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:paddingLeft="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:text=": Teknik Informatika"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:text="Kampus"
                        android:textColor="@color/hitam"
                        android:textStyle="bold"
                        android:gravity="left"
                        android:paddingLeft="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:text=": Universitas Gunadarma"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tentang Aplikasi"
            android:textColor="#fff"
            android:textSize="21sp"
            android:textStyle="bold"
            android:background="@color/colorPrimaryDark"
            android:paddingLeft="10dp"/>

        <TextView
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tentangaplikasi"
            android:textColor="#000000"
            android:textSize="18sp"
            android:background="@color/putih"
            android:textStyle="bold"
            />
    </LinearLayout>





</LinearLayout>