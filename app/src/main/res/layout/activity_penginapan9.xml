<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".penginapan9"
    android:fitsSystemWindows="true"
    android:background="@color/bg_submenu">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:fitsSystemWindows="true"
                android:src="@drawable/pg_9_hotel"
                app:layout_collapseMode="parallax"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways"
                app:layout_collapseMode="pin">

                <RelativeLayout
                    android:onClick="back"
                    android:id="@+id/tombolback"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:src="@drawable/backbtn"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="#4c0112"
                android:id="@+id/ht_gambar">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    >
                    <LinearLayout
                        android:id="@+id/gbr_ht2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="#fff">

                        <ImageView
                            android:scaleType="centerCrop"
                            android:layout_width="350dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/pg_9_lobby"
                            android:layout_margin="5dp"/>
                        <ImageView
                            android:layout_width="350dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pg_9_kamar1"
                            android:layout_margin="5dp"/>
                        <ImageView
                            android:layout_width="350dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pg_9_kamar2"
                            android:layout_margin="5dp"/>
                        <ImageView
                            android:layout_width="350dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pg_9_wc"
                            android:layout_margin="5dp"/>

                        <ImageView
                            android:layout_width="350dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pg_9_cafe"
                            android:layout_margin="5dp" />
                    </LinearLayout>
                </HorizontalScrollView>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_below="@+id/ht_gambar"
                android:id="@+id/ht_info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="#4c0112">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Informasi"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="11pt"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jl. Perintis kemerdekaan No. 17 Bukittinggi"
                        android:textColor="@color/hitam"
                        android:textSize="8pt" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(0752) 21142"
                        android:textColor="@color/hitam"
                        android:textSize="8pt" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="mulai dari "
                        android:textColor="@color/hitam"
                        android:textSize="8pt" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp. 200.000 "
                        android:textColor="@color/kuning"
                        android:textStyle="bold"
                        android:textSize="11pt" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/penginapan9_history"
                        android:textColor="@color/hitam"
                        android:textSize="8pt" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_below="@+id/ht_info2"
                android:id="@+id/ht_info3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fasilitas"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11pt"
                android:textStyle="bold"
                android:background="@color/putih"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="8dp"/>

            <!-- bagian icon awal-->
            <LinearLayout
                android:id="@+id/ht_info4"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@+id/ht_info3"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/putih"
                android:orientation="vertical"
                >

                <!-- bagian icon menu atas-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@color/putih"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@color/putih"
                        android:orientation="vertical"
                        android:weightSum="4">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:src="@drawable/icon_respsionis" />

                        <TextView
                            android:layout_width="55dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:text="Buka 24 Jam"
                            android:textAlignment="center"
                            android:textColor="@color/hitam"
                            android:textSize="11dp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@color/putih"
                        android:orientation="vertical"
                        android:weightSum="4">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:src="@drawable/icon_parking" />

                        <TextView
                            android:layout_width="55dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:text="Pakir   Mobil"
                            android:textAlignment="center"
                            android:textColor="@color/hitam"
                            android:textSize="11dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@color/putih"
                        android:orientation="vertical"
                        android:weightSum="4">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:src="@drawable/icon_sarapan" />

                        <TextView
                            android:layout_width="55dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:text="Termasuk Sarapan"
                            android:textAlignment="center"
                            android:textColor="@color/hitam"
                            android:textSize="11dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@color/putih"
                        android:orientation="vertical"
                        android:weightSum="4">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="4"
                            android:src="@drawable/icon_wifi" />

                        <TextView
                            android:layout_width="55dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:text="WiFi"
                            android:textAlignment="center"
                            android:textColor="@color/hitam"
                            android:textSize="11dp" />
                    </LinearLayout>
                </LinearLayout>
                <!-- bagian icon menu atas akhir-->
            </LinearLayout>
            <!-- bagian icon akhir-->


            <android.support.v7.widget.CardView
                android:layout_below="@+id/ht_info4"
                android:id="@+id/ht_info5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/putih">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/putih"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lokasi"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="11pt"
                        android:textStyle="bold"
                        android:layout_marginLeft="8dp"/>

                    <Button
                        android:id="@+id/maps_penginapan9_id"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/icon_maps"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
